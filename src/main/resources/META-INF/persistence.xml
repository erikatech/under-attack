<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	
	<persistence-unit name="default">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>br.edu.ifam.underattack.model.Aluno</class>
		<class>br.edu.ifam.underattack.model.AlunoEncontraClasseEquivalencia</class>
		<class>br.edu.ifam.underattack.model.AlunoEncontraValorDeEntrada</class>
		<class>br.edu.ifam.underattack.model.AlunoParticipaFase</class>
		<class>br.edu.ifam.underattack.model.AlunoRealizaDesafio</class>
		<class>br.edu.ifam.underattack.model.CasoTeste</class>
		<class>br.edu.ifam.underattack.model.Classe</class>
		<class>br.edu.ifam.underattack.model.ClasseEquivalencia</class>
		<class>br.edu.ifam.underattack.model.Desafio</class>
		<class>br.edu.ifam.underattack.model.Documento</class>
		<class>br.edu.ifam.underattack.model.Fase</class>
		<class>br.edu.ifam.underattack.model.FaseObjetivo</class>
		<class>br.edu.ifam.underattack.model.Ingrediente</class>
		<class>br.edu.ifam.underattack.model.NivelAluno</class>
		<class>br.edu.ifam.underattack.model.Objetivo</class>
		<class>br.edu.ifam.underattack.model.PocaoMagica</class>
		<class>br.edu.ifam.underattack.model.PocaoMagicaIngrediente</class>
		<class>br.edu.ifam.underattack.model.Programa</class>
		<class>br.edu.ifam.underattack.model.ValorDeEntrada</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/under_attack"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
		</properties>
	</persistence-unit>
	
	
</persistence>
